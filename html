<body>
    <div class="container">
        <div class="code-container">
            <h2>HTML কোড লিখুন</h2>
            <textarea id="htmlCode" placeholder="এখানে আপনার HTML কোড লিখুন..."></textarea>
            <button onclick="updatePreview()">প্রিভিউ আপডেট করুন</button>
        </div>
        <div class="preview-container">
            <h2>প্রিভিউ</h2>
            <div class="result" id="result"></div>
        </div>
    </div>

    <script>
        function updatePreview() {
            const code = document.getElementById('htmlCode').value;
            const resultDiv = document.getElementById('result');
            resultDiv.innerHTML = code;
        }
    </script>
